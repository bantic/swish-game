<div class="card {{if this.selected "selected"}} {{if this.flipV "flip-v"}} {{if this.flipH "flip-h"}}" ...attributes {{on "click" this.handleClick}}>
  {{#each this.card.icons as |icon|}}
    <div class="icon-slot grid-{{icon.col}}-{{icon.row}}">
      {{#if (eq icon.type "hoop")}}
        <Icon::Hoop class="{{icon.color}}" />
      {{else if (eq icon.type "dot")}}
        <Icon::Dot class="{{icon.color}}" />
      {{/if}}
    </div>
  {{/each}}
</div>
